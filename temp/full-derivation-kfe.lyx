\begin_inset Formula $x$
\end_inset

, 
\begin_inset Formula 
\begin{eqnarray*}
\frac{\partial}{\partial x}\frac{\partial C}{\partial t} & = & \lambda x\pi-\lambda\bar{x}\pi+\frac{1}{2}\frac{\partial}{\partial x}\sigma^{2}\pi+A\left(t\right)\\
\frac{\partial C}{\partial t} & = & \lambda\mathbb{E}\left[X\right]-\lambda\bar{x}+\frac{1}{2}\frac{\partial}{\partial x}\sigma^{2}\pi+A\left(t\right)
\end{eqnarray*}

\end_inset


\end_layout

